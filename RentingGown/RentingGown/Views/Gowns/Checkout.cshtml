<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/checkout.css" />
</head>

<div style="margin-top:10%" dir="rtl">
    <div class="row">
        <div class="col-75">
            <div class="container">
                <form method="post">

                    <div class="row">
                        <div class="col-50" dir="rtl">
                            <h3> כתובת לחיוב </h3>
                            <label for="fname"><i class="fa fa-user"></i> שם </label>
                            <input type="text" id="fname" name="name">
                            <label for="phone"><i class="fa fa-phone"></i> טלפון</label>
                            <input type="text" id="phone" name="phone">
                            <label for="adr"><i class="fa fa-address-card-o"></i> כתובת</label>
                            <input type="text" id="adr" name="address">
                            <label for="city"><i class="fa fa-institution"></i> עיר</label>
                            <input type="text" id="city">

                            <div class="row">
                                <div class="col-50">
                                    <label for="state">מדינה</label>
                                    <input type="text" id="state">
                                </div>
                                <div class="col-50">
                                    <label for="zip">מיקוד</label>
                                    <input type="text" id="zip">
                                </div>
                            </div>
                        </div>

                        <div class="col-50" dir="rtl">
                            <h3>תשלום</h3>
                            <label for="fname">כרטיסים שיתקבלו</label>
                            <div class="icon-container">
                                <i class="fa fa-cc-visa" style="color:navy;"></i>
                                <i class="fa fa-cc-amex" style="color:blue;"></i>
                                <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                <i class="fa fa-cc-discover" style="color:orange;"></i>
                            </div>
                            <label for="cname">שם בעל הכרטיס</label>
                            <input type="text" id="cname">
                            <label for="ccnum">מספר כרטיס</label>
                            <input type="text" id="ccnum">
                            <label for="expmonth">תוקף</label>
                            <input type="text" id="expmonth">
                        </div>

                    </div>
                    <input type="submit" value="Continue to checkout" class="btn" style="width: 20%;margin-right: 22%;background-color:#d90429">
                </form>
            </div>
        </div>
   
    </div>



</div>